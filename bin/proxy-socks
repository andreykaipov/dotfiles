#!/bin/sh
# shellcheck disable=SC1090,SC2154
. "$(cd "$(dirname "$0")" && pwd)/lib/wrapper.sh"

argr localport
argr remotehost

main() {
    ssh -N -D "0.0.0.0:$localport" "$remotehost" \
        -o PermitLocalCommand=yes \
        -o LocalCommand="
            echo 'SOCKS proxy on localhost:$localport via $remotehost'
        "
}
